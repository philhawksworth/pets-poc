---
interface Props {
	name: string;
	image: string;
}

const { name, image } = Astro.props;
---

<li class="link-card">
  <div class="details">
    <h3>
      {name}
    </h3>
  </div>
  <picture class="lazy lazy-initial">
    <source srcset={`/images/tiny/${image}`} media="(min-width: 1200px)">
    <source srcset={`/images/tiny/${image}`} media="(min-width: 740px)">
    <img src={`/images/tiny/${image}`} alt={name} />
  </picture>
  
  
</li>

<style>
	.link-card {
    list-style: none;
		display: flex;
    aspect-ratio: 1;
    position: relative;
    transition: 0.1s all linear;
	}

  .link-card:hover {
    margin: -3px;
  }
  
  .link-card:hover img {
    opacity: 1;
  }

  picture, img {
    width: 100%;
    opacity:0.9;
    z-index: 10;
  }
  
  
  picture {
    overflow:hidden;
    border-radius: 6px;
  }
  picture img {
    -webkit-transition: 0.5s -webkit-filter ease;
    -o-transition: 0.5s -o-filter ease;
    filter: blur(0);
  }
  

  picture.lazy-initial img {
    filter: blur(var(--blur-radius));
    opacity:0.5;
  }

 .details {
   position:absolute;
   bottom: 1em;
   left: 1em;
   z-index: 20;
   /* background-color: rgba(0,0,0,0.5); */
   
  }
  
  h3 {
    padding: 0;
    margin:0;
  }
  
</style>
